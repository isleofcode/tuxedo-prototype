<form role="form">
  <div class="form-group">
    <label> Title </label>
    {{view Ember.TextField value=title class="form-control"}}
  </div>

  <div class="form-group">
    <label> URL </label>
    {{view Ember.TextField value=url class="form-control"}}
  </div>

  <div class="form-group">
    <label> Content </label>
    {{view Ember.TextField value=body class="form-control"}}
  </div>
  
  <div class="form-group">
    <div class="btn-group">
      <button type="button" class="btn btn-success" {{action "save"}}>Save</button>
    </div>
  </div>
</form>
